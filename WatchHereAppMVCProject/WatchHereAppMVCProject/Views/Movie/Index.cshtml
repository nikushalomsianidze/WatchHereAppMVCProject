@model IEnumerable<Movie>

<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <div style="position: relative; padding-top: 100%;">
                    <img src="@movie.ImgUrl" class="card-img-top" alt="Movie Image" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;">
                </div>
                <div class="card-body">
                    <h5 class="card-title">@movie.Name</h5>
                    <p class="card-text">@movie.Description</p>
                    <p class="card-text">Release Date: @movie.ReleaseDate.ToString("MM/dd/yyyy")</p>
                    <p class="card-text">Category: @movie.MovieCategory</p>
                    <a href="@Url.Action("Details", "Movie", new { id = movie.Id })" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>
